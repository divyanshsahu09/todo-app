<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Divyansh P-1</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 text-white">
        <form action="/create" method="post">
            <input class="block w-full mt-2 px-5 py-3 bg-zinc-800" type="text" placeholder="Title goes here..." name="title">
            <textarea class="block w-full mt-2 rounded-md px-5 py-3 resize-none bg-zinc-800" placeholder="Write your tasks here..." name="details"></textarea>
            <input class="mt-2 bg-blue-600 rounded-md px-5 py-2 cursor-pointer" type="submit" value="Create Task">
        </form>
    </div>
    <div class="tasks p-10 flex gap-3 flex-wrap text-white">
        <% if (files && files.length > 0) { %>
            <% files.forEach(function(val) { %>
                <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
                    <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                    <div class="flex w-full justify-between items-center mt-3">
                        <a class="bg-blue-600 inline-block px-3 py-2 rounded-md" href="/file/<%= val %>">Read More</a>
                        <a class="text-pink-500 underline" href="/edit/<%= val %>">Edit filename</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h3 class="text bg-zinc-800 px-3 py-3 rounded-md">No tasks yet...</h3>
        <% } %>
    </div>
</div>
</body>
</html>
